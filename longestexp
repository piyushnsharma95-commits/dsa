#include<iostream>
#include<string>
#include<sstream>
#include<algorithm>
using namespace std;
int main(){
//string input
string str;
cout<<"enter a string\n";
getline(cin,str);

//1)to find word with longest length
stringstream ss(str);
string word,longest="";
while(ss>>word){
    if(word.length()>longest.length()){
        longest=word;
    }
}
cout<<"longest word is :"<<longest<<endl;

//2)to find freq of a character
char ch;
cout<<"\nenter a charater to count its frequency\n";
cin>>ch;
int count=0;
for(char c : str){
    if(c==ch)
        count++;
}
cout<<"char "<<ch<<" appears "<<count<<"times"<<endl;

//paliindrome check
string temp=str;
string rev=temp;
reverse(rev.begin(),rev.end());
if(rev==temp)
  cout<<"the string is palindrome\n";
  else
  cout<<"the string is not palindrome\n";
  
  //4)substring search
string sub;
cout<<"\n enter a ssubstring to search\n";
cin>>sub;
int index=str.find(sub);
if(index!=-1)
  cout<<"\nsubstring found at index  :\n"<<index<<endl;
  else
  cout<<"\nsubstring not foundn\n"<<endl;

 // e) Count occurrences of each word (without map)
    cout << "\n(e) Word occurrences:\n";
    string words[50];
    int count[50] = {0}, n = 0;

    stringstream ss2(str);
    while (ss2 >> word) {
        bool found = false;
        for (int i = 0; i < n; i++) {
            if (words[i] == word) {
                count[i]++;
                found = true;
                break;
            }
        }
        if (!found) {
            words[n] = word;
            count[n] = 1;
            n++;
        }
    }

    for (int i = 0; i < n; i++)
        cout << words[i] << " : " << count[i] << endl;
  
return 0;
}
