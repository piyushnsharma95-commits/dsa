#include <iostream>
#include <stack>
#include <string>
using namespace std;

bool isBalanced(string exp) {
    stack<char> s;

    for (char ch : exp) {
        // Push opening brackets
        if (ch == '(' || ch == '[' || ch == '{') {
            s.push(ch);
        }
        // Check for closing brackets
        else if (ch == ')' || ch == ']' || ch == '}') {
            if (s.empty())
                return false; // No opening bracket

            char top = s.top();
            s.pop();

            // Mismatch check
            if ((ch == ')' && top != '(') ||
                (ch == ']' && top != '[') ||
                (ch == '}' && top != '{'))
                return false;
        }
    }

    // If stack empty → all matched
    return s.empty();
}

int main() {
    string exp;
    cout << "Enter an expression: ";
    cin >> exp;

    if (isBalanced(exp))
        cout << "✅ Parentheses are balanced.";
    else
        cout << "❌ Parentheses are NOT balanced.";

    return 0;
}
